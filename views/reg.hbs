<div class="container " >
  <div class="col-lg-8 col-md-10 col-xs-10 col-xs-offset-1 col-lg-offset-2 col-md-offset-1 box-in-middle text-center ">
    <div class="row">

<div class="col-sm-7 col-xs-12">
  <h1>Register</h1>
  <p> Don't have an account. Don't worry<br>We got your back. Create one now</p>
  <form role="form" method="post" action="/register">
    {{#if hasErrors}}
      <div class="alert alert-danger">
        {{#each messages}}
          <p>*{{this}}</p>
        {{/each}}
      </div>
    {{/if}}
    <div class="form-group">

      <input type="text" class="form-control" name="usrname" placeholder="Username" required>
    </div>
    <div class="form-group">

      <input type="text" class="form-control" name="mob" placeholder="Mobile" required>
    </div>

    <div class="form-group">
      <input type="password" class="form-control" name="psw" placeholder="Enter password" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="confirmpsw" placeholder="Confirm password" required>
    </div>
    <!-- <div class="checkbox">
      <label><input type="checkbox" value="" checked>Remember me</label>
    </div> -->
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" class="btn-lg green-btn">Register</button>
  </form>
  <h5> Already have an account?<a href="/login">Sign In</a></h5>
</div>
  <div class="vertical-divider hidden-xs ">OR</div>
    <div class="text-center col-sm-5 col-xs-10 auth-wrapper" style="margin-top: 18%">

        <div class="row google " >
          <a href="auth/google"><i class="fa fa-google-plus-square" style="font-size:26px"></i>
          Sign In with Google</a>
        </div>
        <div class="row facebook text-center" align="center">
          <a href="auth/facebook"><i class="fa fa-facebook-square" style="font-size:24px"></i>
          Sign In with Facebook</a>

      </div>
    </div>
  </div>
  </div>
</div>
