  align-items: flex-end!important;
}
#sign {
    color: #ffffff;
    width: 18px;
    height: 18px;
}
.grey-line{
  border-bottom: 2px solid #efefef;
  padding-top: 1%;
}
.margn{
  margin-top:1%;
}
.justify-content-end {
    -ms-flex-pack: end!important;
    justify-content: flex-end!important;
    margin-bottom: 2%;
}
