}
.remove {
    border: solid 1px #0f7e4c;
    background-color: #0f7e4c;
    color: #ffffff;
    padding: 0 30px;
    align-self: flex-end;
}
.removebutton {
    height: auto;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}
